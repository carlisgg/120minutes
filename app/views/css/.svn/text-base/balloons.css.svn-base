/* GLOBOS */

.balloon{
	position:relative;
	padding:15px;
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
	border-radius:10px;
}

.balloon:before, .balloon:after{
	content:"";
	position:absolute;
	border:0;
	border-style:solid;
	display:block; 
    width:0;
    border-bottom-width:20px; /* altura del triangulo */
    bottom:-20px;
}

/* GLOBOS PREGUNTAS */

.balloon-q {
	color: white;
	background-color:#454646;
	-moz-box-shadow: inset 0px 2px 4px #eeefef;
	-webkit-box-shadow: inset 0px 2px 4px #eeefef;
	box-shadow: inset 0px 2px 4px #eeefef;
}

.balloon-q:before {
	left:60px; /* posicion horizontal */
	border-right-width:30px; /* angulo del vertice */
	border-color:transparent #454646;
}

.balloon-q:after {
	left:80px; /* valor = (:before left) + (:before border-right/left-width)  - (:after border-right/left-width) */
	border-right-width:10px; /* angulo del vertice */
	border-color:transparent #fff;
}

/* GLOBOS RESPUESTAS */

.balloon-a {
	float: right;
	background-color:#eeefef;
	-moz-box-shadow: inset 0px 2px 4px #454646;
	-webkit-box-shadow: inset 0px 2px 4px #454646;
	box-shadow: inset 0px 2px 4px #454646;
}

.balloon-a:before {
	right:60px; /* valor = (:before left) + (:before border-right/left-width)  - (:after border-right/left-width) */
	border-left-width:30px; /* angulo del vertice */
	border-color:transparent #eeefef;
}

.balloon-a:after {
	right:80px; /* posicion horizontal */
	border-left-width:10px; /* angulo del vertice */
	border-color:transparent #fff;
}
